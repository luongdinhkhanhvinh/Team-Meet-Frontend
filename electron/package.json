{
  "name": "teammeet",
  "version": "1.0.0",
  "description": "Letâ€™s start a meeting with your team.",
  "homepage": "https://teammeet.codewaft.com",
  "author": "Codewaft <hello@codewaft.com>",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "electron:start": "npm run build && electron ./",
    "electron:pack": "npm run build && electron-builder build --dir",
    "electron:build:mac": "npm run build && electron-builder build --mac",
    "electron:build:windows": "npm run build && electron-builder build --windows",
    "electron:build:linux": "npm run build && electron-builder build --linux"
  },
  "dependencies": {
    "@capacitor-community/electron": "1.3.0-1"
  },
  "devDependencies": {
    "electron": "^10.1.4",
    "electron-builder": "^22.8.1",
    "typescript": "~4.0.3"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "license": "MIT",
  "build": {
    "appId": "com.codewaft.teammeet",
    "productName": "Teammeet",
    "files": [
      "assets/*",
      "build/*",
      "preloader.js",
      "plugins/*",
      "capacitor.config.json",
      "app/**"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "assets/appIcon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/appIcon.ico"
    },
    "linux": {
      "target": "deb",
      "icon": "assets/appIcon.png"
    }
  }
}
